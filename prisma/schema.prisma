// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id          Int       @id @default(autoincrement())
  teamName    String
  faculty     String
  semester    Int
  projectID   project   @relation(fields: [projectId], references: [id])
  valid_token Int
  projectId   Int
  members     members[]
  bill        bill[]
}

model project {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  Team        Team[]
}

model members {
  id      Int    @id @default(autoincrement())
  name    String
  team_id Team   @relation(fields: [teamId], references: [id])
  teamId  Int
}

model coupen {
  id       Int     @id @default(autoincrement())
  otp      String  @default("")
  qty      Int //no of members in members table
  is_valid Boolean @default(true)
}

model bill {
  id         Int    @id @default(autoincrement())
  team_Id    Team   @relation(fields: [teamId], references: [id])
  tokenValue String
  teamId     Int
}
